@using BlazorComponents.ChartJs
@using Microsoft.AspNetCore.Blazor.Components
<div class="row">
	<div class="container">
		<canvas id="@Chart.CanvasId" width="@Width" height="@Height"></canvas>
	</div>
</div>
@functions {

[Parameter]
ChartJsChart<ChartJsLineDataset> Chart { get; set; }
[Parameter]
int Width { get; set; } = 200;
[Parameter]
int Height { get; set; } = 200;
private string ChartjsChart { get; set; } = "";

protected override void OnAfterRender()
{
	ChartJsInterop.InitializeLineChart(Chart);
}

void DisplayChart()
{
	ChartJsInterop.InitializeLineChart(Chart);
}

public void UpdateChart(ChartJsChart<ChartJsLineDataset> updatedChart)
{
	ChartJsInterop.UpdateLineChart(updatedChart);
}
}
